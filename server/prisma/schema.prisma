generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  name             String
  email            String   @unique
  password         String
  pushSubscription Json?
  profileImageUrl  String?
  referrerId       Int?

  goingRelations  Relation[] @relation("from")
  comingRelations Relation[] @relation("to")
}

model Relation {
  id         Int     @id @default(autoincrement())
  fromUser   User    @relation(name: "from", fields: [fromUserId], references: [id])
  fromUserId Int
  toUser     User    @relation(name: "to", fields: [toUserId], references: [id])
  toUserId   Int
  isAccepted Boolean @default(true)

  pokes  Poke[] @relation("poke")
  pokeds Poke[] @relation("poked")

  @@unique([fromUserId, toUserId])
}

model Poke {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  payload    Json
  fromUserId Int
  toUserId   Int

  relationId        Int
  reverseRelationId Int

  relation        Relation @relation(name: "poke", fields: [relationId], references: [id])
  reverseRelation Relation @relation(name: "poked", fields: [reverseRelationId], references: [id])
}
